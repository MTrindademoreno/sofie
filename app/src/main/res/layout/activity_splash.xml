<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashActivity">

    <ImageView
        android:src="@drawable/img_rectangle_1214"
        android:id="@+id/imgSplashActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/img_rectangle_splash" />
    <ImageView
        android:id="@+id/ic_img"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_width="42.75dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="@id/imgSplashActivity"
        app:layout_constraintBottom_toBottomOf="@id/imgSplashActivity"
        app:layout_constraintStart_toStartOf="@id/imgSplashActivity"
        app:layout_constraintEnd_toEndOf="@id/imgSplashActivity"
        android:contentDescription="@string/icon_check" />


</androidx.constraintlayout.widget.ConstraintLayout>